<div class="page-content">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h1 class="text-center">add a new cocktail</h1>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <%= simple_form_for(@cocktail) do |f| %>
          <%= f.input :name %>
          <%= f.button :submit %>
        <% end %>
      </div>
      <p><%= link_to "Back to all cocktails", cocktails_path %></p>
    </div>
  </div>
</div>
